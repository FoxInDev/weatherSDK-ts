{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "dist",

    // Environment Settings
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "types": [],
    "lib": ["ES2020", "DOM"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module Settings
    "moduleDetection": "auto",
    "verbatimModuleSyntax": false, // Отключите временно для отладки
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}